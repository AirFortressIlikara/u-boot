config MACH_LOONGSON
	bool
	default y if ARCH_LA_LOONGSON || ARCH_MIPS_LOONGSON
	select LAST_STAGE_INIT
	select SPL_BOARD_INIT if SPL

config SYS_VENDOR
	default "loongson"

if SOC_LS2K500
config SYS_BOARD
	default "ls2k500"

config SYS_CONFIG_NAME
	default "loongson_2k500"

endif

if SOC_LS2K300
config SYS_BOARD
	default "ls2k300"

config SYS_CONFIG_NAME
	default "loongson_2k300"

endif

source "board/loongson/common/Kconfig"
